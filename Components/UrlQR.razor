<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h6">URL QR Code</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudTextField @bind-Value="Url"
                      Label="Website URL"
                      Variant="Variant.Outlined"
                      Immediate="true"
                      Placeholder="https://example.com" />
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public string? Url { get; set; }
}