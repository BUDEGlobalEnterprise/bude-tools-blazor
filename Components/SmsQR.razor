<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h6">SMS QR Code</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudTextField @bind-Value="PhoneNumber"
                      Label="Phone Number"
                      Variant="Variant.Outlined"
                      Required="true"
                      RequiredError="Phone number is required"
                      Class="mb-3" />

        <MudTextField @bind-Value="Message"
                      Label="Message (Optional)"
                      Variant="Variant.Outlined"
                      Lines="3"
                      Multiline="true" />
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public string? PhoneNumber { get; set; }

    [Parameter]
    public string? Message { get; set; }
}