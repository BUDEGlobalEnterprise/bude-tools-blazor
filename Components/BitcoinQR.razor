<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h6">Bitcoin QR Code</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudTextField @bind-Value="BitcoinAddress"
                      Label="Bitcoin Address"
                      Variant="Variant.Outlined"
                      Required="true"
                      RequiredError="Address is required"
                      Class="mb-3" />

        <MudTextField @bind-Value="Amount"
                      Label="Amount (Optional)"
                      Variant="Variant.Outlined"
                      AdornmentIcon="@Icons.Material.Outlined.CurrencyBitcoin"
                      Class="mb-3" />

        <MudTextField @bind-Value="Label"
                      Label="Label (Optional)"
                      Variant="Variant.Outlined"
                      Class="mb-3" />

        <MudTextField @bind-Value="Message"
                      Label="Message (Optional)"
                      Variant="Variant.Outlined"
                      Class="mb-3" />
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public string? BitcoinAddress { get; set; }

    [Parameter]
    public decimal? Amount { get; set; }

    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public string? Message { get; set; }
}