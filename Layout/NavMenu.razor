<MudDrawer Open="@(!collapseNavMenu)" Variant="DrawerVariant.Responsive" Elevation="1">
    <MudNavMenu>
        <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
            Home
        </MudNavLink>
        <MudNavLink Href="about" Icon="@Icons.Material.Filled.RoundaboutRight">
            About
        </MudNavLink>
        <MudNavLink Href="qrgenerator" Icon="@Icons.Material.Filled.Cloud">
            QR Generator
        </MudNavLink>
    </MudNavMenu>
</MudDrawer>

<MudAppBar Color="Color.Primary" Elevation="4">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleNavMenu" />
    <MudText Typo="Typo.h6" Class="ml-2">Bude-Tools-Blazor</MudText>
</MudAppBar>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
